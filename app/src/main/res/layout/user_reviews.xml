<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    android:paddingBottom="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_tv_marginleft"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_username"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:text="name"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_body" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/reviewimage1"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/reviewimage2"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/reviewimage3"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/reviewimage4"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/reviewimage5"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/star_empty" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/reviewcomment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="comment"
            android:textColor="@color/grey"
            android:textSize="@dimen/tv_body" />

    </LinearLayout>

</LinearLayout>
