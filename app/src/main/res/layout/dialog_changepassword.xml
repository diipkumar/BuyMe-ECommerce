<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="@dimen/dialog_title_padding"
        android:text="@string/changge_password"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tvbody_marginleft"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/verification_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/sendverificationdialogtv"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:textColor="@color/blue"
                    android:text="@string/tv_current_pasword"
                    android:textSize="@dimen/cp_tv_body" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:text="@string/tv_div" />

                <EditText
                    android:id="@+id/oldpassword"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/etbg"
                    android:padding="@dimen/et_padding"
                    android:gravity="start"
                    android:textCursorDrawable="@null"
                    android:inputType="textLongMessage"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/cp_tv_body" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:textColor="@color/blue"
                    android:text="@string/tv_new_password"
                    android:textSize="@dimen/cp_tv_body" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:text="@string/tv_div" />

                <EditText
                    android:id="@+id/newpassword"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/etbg"
                    android:padding="@dimen/et_padding"
                    android:gravity="start"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/cp_tv_body" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:textColor="@color/blue"
                    android:text="@string/verify_password"
                    android:textSize="@dimen/cp_tv_body" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".1"
                    android:gravity="center"
                    android:text="@string/tv_div" />

                <EditText
                    android:id="@+id/verifypassword"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/etbg"
                    android:padding="@dimen/et_padding"
                    android:gravity="start"
                    android:textCursorDrawable="@null"
                    android:inputType="textPassword"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/cp_tv_body" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Change_password_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dialog_action_padding"
                android:paddingRight="@dimen/dialog_action_padding"
                android:paddingTop="@dimen/dialog_action_padding"
                android:text="@string/cancel"
                android:textColor="@color/blue"
                android:textSize="@dimen/cp_tv_btn" />

            <TextView
                android:id="@+id/Change_password_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dialog_action_padding"
                android:paddingRight="@dimen/dialog_action_padding"
                android:paddingTop="@dimen/dialog_action_padding"
                android:text="@string/ok"
                android:textColor="@color/blue"
                android:textSize="@dimen/cp_tv_btn" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
