<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_tv_marginleft"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_marginbottom"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".8"
                android:gravity="center|left"
                android:textColor="@color/blue"
                android:text="@string/phone"
                android:textSize="@dimen/tv_body" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="@string/tv_div" />

            <TextView
                android:id="@+id/shop_contact_number"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.3"
                android:text="phone"
                android:textColor="@color/grey"
                android:gravity="start"
                android:textSize="@dimen/tv_body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/tv_marginbottom"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".8"
                android:gravity="left"
                android:text="@string/Address"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_body" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:gravity="top|center"
                android:text="@string/tv_div" />

            <TextView
                android:id="@+id/shop_contact_address"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom|left"
                android:layout_weight="2"
                android:text="#46, annapillai street, chennai 600079, Tamil Nadu"
                android:textColor="@color/grey"
                android:textSize="@dimen/tv_body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_marginbottom"
            android:orientation="horizontal"

            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".8"
                android:gravity="center|left"
                android:text="@string/mail_id"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_body" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:text="@string/tv_div" />

            <TextView
                android:id="@+id/shop_info_contact_mail"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.7"
                android:text="abc@gmail.com"
                android:textColor="@color/grey"
                android:textSize="@dimen/tv_body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".8"
                android:gravity="left"
                android:text="@string/website"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_body" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".2"
                android:gravity="center|top"
                android:text="@string/tv_div" />

            <TextView
                android:id="@+id/shop_info_website"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:text="www.fashionplus.com"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/grey"
                android:textSize="@dimen/tv_body" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
